{
  "name": "@serendipetey/components",
  "version": "1.0.17",
  "description": "React component library built with design system tokens",
  "main": "dist/index.js",
  "module": "dist/index.esm.js",
  "types": "dist/index.d.ts",
  "repository": {
    "type": "git",
    "url": "https://github.com/serendipetey/design-system.git",
    "directory": "packages/components"
  },
  "files": [
    "dist/**/*",
    "src/**/*"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "build:dev": "rollup -c",
    "dev": "rollup -c -w",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:a11y": "jest --testNamePattern=\"accessibility\"",
    "test:ai-compat": "jest --testNamePattern=\"ai.compatibility\"",
    "type-check": "tsc --noEmit",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "clean": "rimraf dist",
    "clean:bloat": "bash scripts/cleanup-build-bloat.sh",
    "clean:all": "pnpm run clean:bloat && pnpm run clean",
    "validate:tokens": "tsx scripts/validate-tokens.ts",
    "validate:button": "tsx scripts/validate-tokens.ts",
    "validate:input": "tsx scripts/validate-input-tokens.ts",
    "validate:phase-2-2": "tsx scripts/run-phase-2-2-validation.ts",
    "validate:phase-3-1": "pnpm run validate:input && pnpm run test src/ui/__tests__/input.test.tsx",
    "validate:components": "pnpm run validate:button && pnpm run validate:input",
    "validate:all": "pnpm run type-check && pnpm run lint && pnpm run test && pnpm run validate:components",
    "ci:test": "pnpm run validate:all && pnpm run build-storybook",
    "prepare": "echo 'Skipping build during development'",
    "phase:3-1-validate": "echo '🔍 Phase 3.1: Input Component Validation' && pnpm run validate:input",
    "phase:3-complete": "echo '✅ Phase 3: Form Components Complete' && pnpm run validate:components && pnpm run test"
  },
  "dependencies": {
    "@radix-ui/react-slot": "^1.0.2",
    "@serendipetey/design-tokens": "*",
    "class-variance-authority": "^0.7.1",
    "tailwind-merge": "^2.6.0"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^25.0.7",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-typescript": "^11.1.5",
    "@storybook/addon-essentials": "^8.6.14",
    "@storybook/addon-interactions": "^8.6.14",
    "@storybook/blocks": "^8.6.14",
    "@storybook/react": "^8.6.14",
    "@storybook/react-vite": "^8.6.14",
    "@storybook/test": "^8.6.14",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^14.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^29.5.14",
    "@types/node": "^20.19.1",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "cross-env": "^7.0.3",
    "eslint": "^8.0.0",
    "eslint-plugin-react": "^7.33.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-storybook": "^0.8.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "rimraf": "^5.0.0",
    "rollup": "^4.0.0",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.2",
    "storybook": "^8.6.14",
    "tsx": "^4.0.0",
    "typescript": "^5.0.0",
    "vite": "^5.0.0"
  },
  "publishConfig": {
    "registry": "https://npm.pkg.github.com",
    "access": "restricted"
  }
}
