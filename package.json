{
  "name": "work-design-system",
  "version": "1.0.0",
  "description": "AI-friendly component library with sophisticated design tokens",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "pnpm run sync-tokens --watch & pnpm run tokens:dev & pnpm run components:dev",
    "build": "pnpm run sync-tokens && pnpm run tokens:build && pnpm run components:build",
    "build:tokens": "pnpm run --filter @work/tokens build",
    "dev:tokens": "pnpm run --filter @work/tokens dev",
    "sync-tokens": "node scripts/sync-tokens.js",
    "sync-tokens:watch": "node scripts/sync-tokens.js --watch",
    "components:build": "tsup src/index.ts --format cjs,esm --dts --external react",
    "components:dev": "tsup src/index.ts --format cjs,esm --dts --external react --watch",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "validate": "pnpm run sync-tokens && pnpm run type-check && pnpm run lint",
    "clean": "rimraf dist .turbo node_modules/.cache"
  },
  "keywords": [
    "design-system",
    "components",
    "react",
    "typescript",
    "tailwind",
    "tokens"
  ],
  "author": "Your Team",
  "license": "MIT",
  "dependencies": {
    "@radix-ui/react-accordion": "^1.1.2",
    "@radix-ui/react-alert-dialog": "^1.0.5",
    "@radix-ui/react-avatar": "^1.0.4",
    "@radix-ui/react-checkbox": "^1.0.4",
    "@radix-ui/react-dialog": "^1.0.5",
    "@radix-ui/react-dropdown-menu": "^2.0.6",
    "@radix-ui/react-label": "^2.0.2",
    "@radix-ui/react-popover": "^1.0.7",
    "@radix-ui/react-radio-group": "^1.1.3",
    "@radix-ui/react-select": "^2.0.0",
    "@radix-ui/react-separator": "^1.0.3",
    "@radix-ui/react-slider": "^1.1.2",
    "@radix-ui/react-slot": "^1.0.2",
    "@radix-ui/react-switch": "^1.0.3",
    "@radix-ui/react-tabs": "^1.0.4",
    "@radix-ui/react-toast": "^1.1.5",
    "@radix-ui/react-tooltip": "^1.0.7",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.294.0",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.19.1",
    "@types/react": "^18.2.38",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.12.0",
    "@typescript-eslint/parser": "^6.12.0",
    "autoprefixer": "^10.4.21",
    "chokidar": "^3.5.3",
    "eslint": "^8.54.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "^8.5.6",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.5",
    "tailwindcss": "^3.4.17",
    "tailwindcss-animate": "^1.0.7",
    "ts-jest": "^29.1.1",
    "tsup": "^8.0.0",
    "typescript": "^5.8.3",
    "vite": "^5.0.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "files": [
    "dist/**/*",
    "src/**/*",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./globals.css": "./globals.css",
    "./tailwind.config.js": "./tailwind.config.js"
  },
  "packageManager": "pnpm@9.5.0+sha512.140036830124618d624a2187b50d04289d5a087f326c9edfc0ccd733d76c4f52c3a313d4fc148794a2a9d81553016004e6742e8cf850670268a7387fc220c903"
}
